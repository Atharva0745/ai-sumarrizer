{
    "manifest_version": 3,
    "name": "AI Summarizer",
    "version": "1.0",
    "description": "An extension that summarizes web pages using AI.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "image.png"
    },
    "permissions": ["activeTab","scripting","storage"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
    "background": {
        "service_worker": "background.js"
      },
      "options_page": "options.html"
}